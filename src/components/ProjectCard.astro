---
import type { Project } from "../data/projects";

const { project } = Astro.props as { project: Project };

const cardBase =
  "text-card-foreground gap-6 rounded-xl border py-6 shadow-sm overflow-hidden hover:scale-105 hover:shadow-xl transition-all duration-300 group w-full";
const imgBase =
  "object-cover group-hover:scale-110 transition-transform duration-300 w-full h-full mx-auto";
const pillBase =
  "border border-gray-800 px-3 rounded text-sm text-white hover:scale-110 transition-transform duration-200";
const btnBase =
  "border rounded border-gray-800  px-2 py-1 flex items-center gap-2 hover:scale-110 transition-transform duration-200";
---

<div class={cardBase}>
  <div class="aspect-video relative overflow-hidden">
    <img src={project.image} alt={project.alt} class={imgBase} loading="lazy" />
  </div>

  <div class="p-4">
    <h3 class="text-md font-bold mb-1 text-white">{project.title}</h3>
    <p class="mb-4 text-muted-foreground text-md text-gray-500">
      {project.description}
    </p>

    <div class="flex flex-wrap gap-2 mb-4">
      {project.tech.map((t) => <span class={pillBase}>{t}</span>)}
    </div>

    <div class="flex space-x-4">
      <a href={project.codeUrl} class={btnBase + " bg-[#1e293b] text-white"} aria-label={`Código de ${project.title}`}>
        <svg width="20" height="20" viewBox="0 0 16 16" aria-hidden="true">
          <path fill="currentColor"
            d="M8 0a8 8 0 0 0-2.53 15.6c.4.07.55-.17.55-.38v-1.33c-2.24.49-2.7-1.08-2.7-1.08-.36-.9-.88-1.14-.88-1.14-.72-.49.05-.48.05-.48.8.06 1.22.83 1.22.83.71 1.21 1.87.86 2.33.65.07-.52.28-.86.5-1.06-1.79-.2-3.67-.9-3.67-4a3.13 3.13 0 0 1 .83-2.16 2.9 2.9 0 0 1 .08-2.13s.68-.22 2.23.83a7.65 7.65 0 0 1 4.06 0c1.55-1.05 2.23-.83 2.23-.83.33.84.17 1.82.08 2.13.52.56.83 1.28.83 2.16 0 3.11-1.89 3.79-3.69 3.99.29.25.54.75.54 1.52v2.26c0 .21.15.45.55.38A8 8 0 0 0 8 0Z" />
        </svg>
        <span>Código</span>
      </a>

      <a href={project.demoUrl} class={btnBase + " bg-white text-black"} aria-label={`Demo de ${project.title}`}>
        <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor"
            d="M19 19H5V5h7V3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-2v7ZM14 3v2h3.59l-9.83 9.83l1.41 1.41L19 6.41V10h2V3h-7Z" />
        </svg>
        <span>Demo</span>
      </a>
    </div>
  </div>
</div>
