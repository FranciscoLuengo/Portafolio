---
import { projects } from "../data/projects";
import ProjectCard from "./ProjectCard.astro";
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8 bg-gradient-to-r from-white to-blue-600 bg-clip-text text-transparent text-center leading-snug">
      Proyectos
    </h2>

    <p class="text-muted-foreground md:text-lg leading-relaxed mb-8 text-blue-100 text-center">
      Algunos de mis trabajos m√°s destacados
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((p) => <ProjectCard project={p} />)}
    </div>
  </div>
</section>
